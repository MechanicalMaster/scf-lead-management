      newEscalationLevel += 1;
      
      // Update stage based on escalation level
      if (newEscalationLevel === 1) {
        newStage = 'RM_Escalation1';
      } else if (newEscalationLevel === 2) {
        newStage = 'PSM_ReviewPending';
