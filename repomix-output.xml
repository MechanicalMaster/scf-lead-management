    const rmEmail = await getEmailFromRmAdid(rmAdid);
    
    // Call the handleNewLeadAssignment function with safe parameters
    await handleNewLeadAssignment(
      processedLeadId,
      rmAdid,
      rmEmail,
      psmAdid || undefined
    );
    
    return true;
  } catch (error) {
    console.error('Error in safe lead assignment:', error);
    return false;
  }
}

